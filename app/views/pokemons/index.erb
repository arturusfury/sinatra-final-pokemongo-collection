<div class="row">
    <div class="box col-lg-offset-1 col-lg-10">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Kanto <strong>Pokedex</strong></h2>
            <hr>
            <div class="row">
              <% @pokemons.each do |pokemon| %>
              <div class="col-md-3 col-sm-4 col-xs-6">
                <figure class="figure">
                  <a href="/pokemons/<%=pokemon.id%>"><img src="<%=pokemon.image_url%>" class="img-responsive"></a>
                  <figcaption class="figure-caption"><%=pokemon.name%></figcaption>
                </figure>
              </div>
              <%end%>
            </div>
        </div> <!-- end col-lg-12 -->
    </div> <!-- end .box -->
</div> <!-- end .row -->
