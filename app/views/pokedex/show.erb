<div class="row">
  <div class="box col-lg-offset-1 col-lg-10">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"> <strong><%=@pokemon.name%></strong></h2>
      <hr>
      <div class="row">
        <div class="col-sm-offset-2 col-sm-4">
          <img src="<%=@pokemon.image_url%>" class="img-responsive">
        </div>
        <div class="col-sm-offset-1 col-sm-4">
          <p>ID: <%=@pokemon.id%></p>
          <p>Species: <%=@pokemon.species%></p>
          <p>Height: <%=@pokemon.height%> inches</p>
          <p>Weight: <%=@pokemon.weight%> lbs</p>
          <p>Types:</p>
          <ul>
            <% @pokemon.types.split(',').each do |type| %>
              <li><%= type %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row text-center">
        <br />
        <br />
        <p><%=@pokemon.description%></p>
      </div>
    </div> <!-- end col-lg-12 -->
  </div> <!-- end .box -->
</div> <!-- end .row -->
