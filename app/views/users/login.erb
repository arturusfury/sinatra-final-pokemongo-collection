<div class="row">
  <div class="box col-lg-offset-3 col-lg-6">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Login to your Account</h2>
      <hr>
      <div class="col-lg-offset-1 col-lg-10">
        <form class="form-signin" action="/login" method="post">
          <label for="inputUsername" class="sr-only">Username</label>
          <input type="text" name="inputUsername" id="inputUsername" class="form-control" placeholder="Username">
          <br />
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" name="inputPassword" id="inputPassword" class="form-control" placeholder="Password">
          <br />
          <div class="col-lg-offset-2 col-lg-8">
            <button class="btn btn-lg btn-primary btn-sm btn-block" name="submit" value="submit" type="submit">Sign in</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="box col-lg-offset-3 col-lg-6">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Create an Account</h2>
      <hr>
      <div class="col-lg-offset-1 col-lg-10">
        <form class="form-signin" action="/new" method="post">
          <label for="inputEmail" class="sr-only">Email</label>
          <input type="email" name="inputEmail" id="inputEmail" class="form-control" placeholder="Email">
          <br />
          <label for="inputUsername" class="sr-only">Username</label>
          <input type="text" name="inputUsername" id="inputUsername" class="form-control" placeholder="Username">
          <br />
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" name="inputPassword" id="inputPassword" class="form-control" placeholder="Password">
          <br />
          <div class="col-lg-offset-2 col-lg-8">
            <button class="btn btn-lg btn-primary btn-sm btn-block" name="create" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
