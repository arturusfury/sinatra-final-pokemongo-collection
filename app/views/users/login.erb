<% if flash(:three)[:error] %>
  <div class="alert alert-warning col-lg-offset-2 col-lg-8">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Error!</strong> <%= flash(:three)[:error] + "." %>
  </div>
<% end %>

<div class="row">
  <div class="box col-lg-offset-2 col-lg-8">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">The <strong>PokemonGo</strong> Collection</h2>
      <hr>
      <p>You can use this page to enter your Pokemon from PokemonGO and keep track of the different ones you have collected.  You will need create an account to keep track of all of your Pokemon and then you can use our simple form to add a new pokemon to your collection.</p>
    </div> <!-- end col-lg-12 -->
  </div> <!-- end .box -->
</div> <!-- end .row -->

<% if flash(:one)[:error] %>
  <div class="alert alert-danger col-lg-offset-2 col-lg-8">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Error!</strong> <%= flash(:one)[:error] + "." %>
  </div>
<% end %>

<div class="row">
  <div class="box col-lg-offset-2 col-lg-8">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Login to your Account</h2>
      <hr>
      <div class="col-lg-offset-1 col-lg-10">
        <form class="form-signin" action="/login" method="post">
          <label for="loginUsername" class="sr-only">Username</label>
          <input type="text" name="loginUsername" id="loginUsername" class="form-control" placeholder="Username">
          <br />
          <label for="loginPassword" class="sr-only">Password</label>
          <input type="password" name="loginPassword" id="loginPassword" class="form-control" placeholder="Password">
          <br />
          <div class="col-lg-offset-2 col-lg-8">
            <button class="btn btn-lg btn-primary btn-sm btn-block" name="submit" value="submit" type="submit">Sign in</button>
          </div>
        </form>
      </div>
    </div> <!-- end col-lg-12 -->
  </div> <!-- end .box -->
</div> <!-- end .row -->

<% if flash(:two)[:error] %>
  <div class="alert alert-danger col-lg-offset-2 col-lg-8">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Error!</strong> <%= flash(:two)[:error] + "." %>
  </div>
<% end %>

<div class="row">
  <div class="box col-lg-offset-2 col-lg-8">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Create an Account</h2>
      <hr>
      <div class="col-lg-offset-1 col-lg-10">
        <form class="form-signin" action="/new" method="post">
          <label for="inputEmail" class="sr-only">Email</label>
          <input type="email" name="inputEmail" id="inputEmail" class="form-control" placeholder="Email">
          <br />
          <label for="inputUsername" class="sr-only">Username</label>
          <input type="text" name="inputUsername" id="inputUsername" class="form-control" placeholder="Username">
          <br />
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" name="inputPassword" id="inputPassword" class="form-control" placeholder="Password">
          <br />
          <div class="col-lg-offset-2 col-lg-8">
            <button class="btn btn-lg btn-primary btn-sm btn-block" name="create" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div> <!-- end col-lg-12 -->
  </div> <!-- end .box -->
</div> <!-- end .row -->
