<div class="row">
    <div class="box col-lg-offset-3 col-lg-6">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Login to your Account</h2>
            <hr>
            <div class="col-lg-offset-1 col-lg-10">
              <form class="form-signin" action="/login" post="post">
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="email" name="inputUsername" id="inputUsername" class="form-control" placeholder="Username" required="" autofocus="">
                <br />
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="inputPassword" id="inputPassword" class="form-control" placeholder="Password" required="">
                <br />
                <div class="col-lg-offset-2 col-lg-8">
                  <button class="btn btn-lg btn-primary btn-sm btn-block" name="submit" type="submit">Sign in</button>
                </div>
              </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
